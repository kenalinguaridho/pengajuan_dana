<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            margin-top: 100px;
        }

        table {
            max-width: 800px;
        }
    </style>
    <title>Pengajuan Dana</title>
</head>

<body>
    <center>
        <h1>Pengajuan Dana</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nama Pemohon</th>
                    <th scope="col">Divisi</th>
                    <th scope="col">Nominal</th>
                    <th scope="col">Metode</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                <% pengajuanDanas.forEach(function(pengajuanDana) { %>
                    <tr>
                        <td>
                            <%= pengajuanDana.user.name %>
                        </td>
                        <td>
                            <%= pengajuanDana.user.division.divisionName %>
                        </td>
                        <td>
                            Rp. <%= pengajuanDana.amount %>
                        </td>
                        <td>
                            <%= pengajuanDana.method.methodName %>
                        </td>
                        <td>
                            <a onclick="if(confirm('Apakah anda yakin ingin menghapus data ini ?'))
                                {location.href='/app/pengajuandana/delete/<%= pengajuanDana.id %>'}"
                                href="/app/pengajuandana" class="btn btn-danger">Delete</a>
                            <a href="/app/pengajuandana/edit/<%= pengajuanDana.id %>" class="btn btn-primary">Edit</a>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>

        <a href="/app/pengajuandana/add" class="btn btn-success">Add</a>
    </center>
</body>

</html>