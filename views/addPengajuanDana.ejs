<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            margin-top: 100px;
        }

        form {
            max-width: 600px;
        }
    </style>
    <title>Methods</title>
</head>

<body>
    <center>
        <h1>Edit Pengajuan Dana</h1>
        <form action="/app/pengajuandana/" method="post">
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="userId" class="col-form-label">User</label>
                </div>
                <div class="col-auto">
                    <select name="userId" class="form-select form-select-sm" aria-label="Small select example">
                        <% users.forEach(function(user) { %>
                            <option value="<%= user.id %>">
                                <%= user.name %>
                            </option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="amount" class="col-form-label">Nominal</label>
                </div>
                <div class="col-auto">
                    <input type="text" class="form-control" id="amount" name="amount" placeholder="0">
                </div>
            </div>
            <div class="row g-3 align-items-center">
                <div class="col-auto">
                    <label for="methodId" class="col-form-label">Metode</label>
                </div>
                <div class="col-auto">
                    <select name="methodId" class="form-select form-select-sm" aria-label="Small select example">
                        <% methods.forEach(function(method) { %>
                            <option value="<%= method.id %>">
                                <%= method.methodName %>
                            </option>
                        <% }); %>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </center>
</body>

</html>